{
	"name": "nuclo",
	"private": false,
	"version": "0.1.99",
	"type": "module",
	"main": "./dist/nuclo.cjs",
	"module": "./dist/nuclo.js",
	"browser": "./dist/nuclo.umd.js",
	"types": "./types/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/nuclo.js",
			"require": "./dist/nuclo.cjs"
		},
		"./ssr": {
			"types": "./dist/ssr/index.d.ts",
			"import": "./dist/ssr/nuclo.ssr.js",
			"require": "./dist/ssr/nuclo.ssr.cjs"
		},
		"./types": {
			"types": "./types/index.d.ts"
		}
	},
	"files": [
		"dist",
		"types"
	],
	"scripts": {
		"build": "rm -rf dist && rollup -c && tsc --emitDeclarationOnly",
		"dev": "rm -rf dist && rollup -c -w & tsc --emitDeclarationOnly --watch",
		"dev:all": "pnpm dev & cd examples/basic && npm run dev",
		"build:watch": "rm -rf dist && rollup -c -w & tsc --emitDeclarationOnly --watch",
		"build:rollup": "rollup -c",
		"build:types": "tsc --emitDeclarationOnly",
		"clean": "rm -rf dist *.tsbuildinfo",
		"test": "vitest run --coverage",
		"test:watch": "vitest --watch --coverage",
		"lint": "eslint . --ext .ts,.js,.json,.jsonc,.json5,.md,.css",
		"lint:fix": "eslint . --ext .ts,.js,.json,.jsonc,.json5,.md,.css --fix"
	},
	"devDependencies": {
		"@eslint/css": "^0.14.1",
		"@eslint/js": "^9.0.0",
		"@eslint/json": "^1.0.0",
		"@eslint/markdown": "^7.5.1",
		"@rollup/plugin-terser": "^0.4.4",
		"@rollup/plugin-typescript": "^12.3.0",
		"@types/node": "^25.2.3",
		"@vitest/coverage-v8": "4.0.18",
		"eslint": "^9.0.0",
		"globals": "^17.3.0",
		"jsdom": "^28.0.0",
		"rollup": "^4.57.1",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.55.0",
		"vitest": "^4.0.18"
	},
	"packageManager": "pnpm@10.26.2",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dan2dev/nuclo.git"
	},
	"bugs": {
		"url": "https://github.com/dan2dev/nuclo/issues"
	},
	"homepage": "https://nuclo.dan2.dev/"
}
